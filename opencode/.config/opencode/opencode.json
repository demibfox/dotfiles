{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [],
  "theme": "catppuccin",
  "autoupdate": true,
  "permission": {
    "skill": {
      "*": "allow"
    }
  },
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "openai/gpt-oss-20b": {
          "name": "gpt-oss-20b"
        },
        "openai/gpt-oss-120b": {
          "name": "gpt-oss-120b"
        },
        "qwen/qwen3-coder-30b": {
          "name": "gwen3-coder-30b"
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss:20b": {
          "name": "gpt-oss-20b"
        }
      }
    }
  },
  "mcp": {
     "context7": {
       "type": "local",
       "command": ["npx", "-y", "@upstash/context7-mcp"],
       "enabled": true,
       "environment": {}
     },
     "convex": {
       "type": "local",
       "command": ["npx", "-y", "convex", "mcp", "start"],
       "enabled": true,
       "environment": {}
     },
     "n8n-mcp": {
       "type": "local",
       "command": ["npx", "n8n-mcp"],
       "enabled": true,
       "environment": {
         "MCP_MODE": "stdio",
         "LOG_LEVEL": "error",
         "DISABLE_CONSOLE_OUTPUT": "true",
         "N8N_API_URL": "{env:N8N_API_URL}",
         "N8N_API_KEY": "{env:N8N_API_KEY}"
       }
     },
    "brave": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-brave-search"],
      "enabled": true,
      "environment": {
         "BRAVE_API_KEY": "{env:BRAVE_API_KEY}",
      }
    },
    "nextjs-dev-tools": {
      "type": "local",
      "command": ["npx", "-y", "next-devtools-mcp@latest"],
      "enabled": true,
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "clerk": {
      "type": "remote",
      "url": "https://mcp.clerk.com/mcp"
    },
    "shadcdn": {
      "type": "local",
      "command": ["npx", "-y", "shadcn@latest", "mcp"],
      "enabled": true,
    }
  }
}
